{% block content %}
<div class="form-container mx-auto mt-8 p-4">
    <h2 class="font-semibold text-3xl mb-2">Create User</h2>

    <form action="/event_management_site/admin/users/create" method="post" enctype="multipart/form-data">
        <input class="form-input" type="text" name="name" placeholder="Full Name" required value="{{ userData['name'] ?? '' }}">
        <input class="form-input" type="text" name="username" placeholder="Username" required value="{{ userData['username'] ?? '' }}">
        <input class="form-input" type="email" name="email" placeholder="Email" required value="{{ userData['email'] ?? '' }}">
        <textarea class="form-input" name="address" placeholder="Address" required>{{ userData['address'] ?? '' }}</textarea>
        <select class="form-input" name="gender" required>
            <option value="" disabled selected>Select Gender</option>
            <option value="Male" {{ userData['gender'] == 'Male' ? 'selected' : '' }}>Male</option>
            <option value="Female" {{ userData['gender'] == 'Female' ? 'selected' : '' }}>Female</option>
            <option value="Other" {{ userData['gender'] == 'Other' ? 'selected' : '' }}>Other</option>
        </select>
        <input class="form-input" type="file" name="profile_picture" accept="image/*">
        <input class="form-input" type="password" name="password" placeholder="Password" required value="{{ userData['email'] ?? '' }}">
        <input class="form-input" type="password" name="confirm_password" placeholder="Confirm Password" required value="{{ userData['email'] ?? '' }}">
        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" type="submit">Create User</button>

        {% if errors %}
            <div class="mt-4 text-red-600">
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </form>
</div>
{% endblock %}