{% block content %}
    <div class="form-container mx-auto mt-8 p-4">
        <h1 class="text-3xl font-semibold">Create Event</h1>

        <form action="/events/create" method="POST" class="mt-4">
            <!-- Event details input fields -->
            <div class="mb-4">
                <label for="title" class="block font-semibold">Event Title</label>
                <input type="text" name="title" id="title" class="form-input w-full" required>
            </div>
            <!-- Other event details input fields (description, start_date, end_date, venue, etc.) -->
            <div class="mb-4">
                <label for="title" class="block font-semibold">Event Description</label>
                <textarea id="description" name="description" class="form-input w-full" required></textarea>
            </div>
            <div class="mb-4">
                <label for="start_date" class="block font-semibold">Start Date</label>
                <input type="date" name="start_date" id="start_date" class="form-input w-full" required>
            </div>
            <div class="mb-4">
                <label for="end_date" class="block font-semibold">End Date</label>
                <input type="date" name="end_date" id="end_date" class="form-input w-full" required>
            </div>
            <div class="mb-4">
                <label for="venue" class="block font-semibold">Venue</label>
                <input type="text" name="venue" id="venue" class="form-input w-full" required>
            </div>
            <div class="mb-4">
                <label for="category_ids" class="block font-semibold">Categories</label>
                <select class="form-input w-full" id="category_ids" name="category_ids[]">
                    {% for category in categories %}
                        <option value="{{ category.category_id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="mb-4">
                <label for="event_image" class="block font-semibold">Event Image</label>
                <input type="file" name="event_image" id="event_image" class="form-input w-full">
            </div>
            <div class="mt-4">
                <button type="submit" class="bg-green-500 text-white font-semibold py-2 px-4 rounded hover:bg-green-600">Create Event</button>
            </div>
        </form>

        <!-- Display validation errors here if any -->
        {% if errors %}
            <div class="mt-4 text-red-600">
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}