{% block content %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-semibold mb-6">Upcoming Events</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for event in events %}
                <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition">
                    <img src="{{ event.image_url }}" alt="{{ event.title }}" class="w-full h-40 object-cover rounded mb-4">
                    <h2 class="text-xl font-semibold">{{ event.title }}</h2>
                    <p class="text-gray-600 text-sm">{{ event.date }}</p>
                    <p class="text-gray-700 mt-2">{{ event.description }}</p>
                    <a href="events/details/{{ event.event_id }}" class="text-blue-500 hover:underline mt-4 inline-block">Details</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
