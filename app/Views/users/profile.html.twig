<div class="container mx-auto p-4">
<h1 class="text-3xl font-semibold">Profile Page</h1>
    <!-- Profile Header -->
    <div class="flex items-center justify-between p-4 border-b">
        <div class="flex items-center">
            <img src="{{ user.profile_picture }}" alt="{{ user.name }}" class="w-16 h-16 rounded-full mr-4">
            <h1 class="text-2xl font-bold">{{ user.name }}</h1>
        </div>
        <button disabled class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" id="deleteProfileBtn">
            Delete
        </button>
    </div>

    <!-- Profile Details -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
        <!-- Left Column - Profile Image & Details -->
        <div class="md:col-span-1">
            <div class="mt-4">
                <h2 class="text-lg font-semibold mb-2">Details</h2>
                <p><strong>Full Name:</strong> <span id="fullName">{{ user.name }}</span></p>
                <p><strong>Username:</strong> <span id="username">{{ user.username }}</span></p>
                <p><strong>Email Address:</strong> <span id="emailAddress">{{ user.email }}</span></p>
                <p><strong>Gender:</strong> <span id="gender">{{ user.gender }}</span></p>
                <p><strong>Address:</strong> <span id="address">{{ user.address }}</span></p>
                <!-- ... other details ... -->
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-end mt-4">
        <a href="edit-profile" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" id="editProfile">
        Edit Profile
    </a>
    </div>
</div>